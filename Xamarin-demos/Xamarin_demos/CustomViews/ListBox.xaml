<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Xamarin_demos.CustomViews.ListBox">
	<ContentView.Content>
          <Frame Padding="20,20,30,20" BackgroundColor="White" CornerRadius="5">
                   <Grid ColumnSpacing="20"> 
                     <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>  

                  <Image x:Name="ImgTitle"  Grid.Column="0"/>  
                  <Image Source="ic_add"  Grid.Column="2"/>
                  <StackLayout Spacing="0" Grid.Column="1" HorizontalOptions="FillAndExpand"> 
                    <Label Font="DroidSans-Regular.ttf#Droid Sans" TextColor="#415670"  x:Name="lblListTitle" FontSize="Small"/>
                    <Label Font="DroidSans-Regular.ttf#Droid Sans" TextColor="#bec3cb" x:Name="lblListSubTitle" FontSize="Micro"/>
                  </StackLayout>  
              </Grid>      
                </Frame>     
	</ContentView.Content>
</ContentView>
